@model IEnumerable<Person>
@{
}



<div class="row">
    @foreach(var user in Model)
    {
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    User id: @user.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@user.Name</h5>
                    <p class="card-text">Email: @user.Email</p>
                    <a asp-controller="People" asp-action="Details" asp-route-id="@user.Id" class="card-link">Show Reviews</a>
                </div>
            </div>
        </div>
    }
</div>